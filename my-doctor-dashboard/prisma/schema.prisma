generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Patient {
  id             Int             @id @default(autoincrement())
  name           String
  photo          String
  phoneNumber    String          
  diagnosis      String
  history        String
  dischargeNotes String?         
  medications    Medication[]
  callSummaries  CallSummary[]
  scheduledCalls ScheduledCall[]
}

model Medication {
  id        Int     @id @default(autoincrement())
  name      String
  dosage    String
  patientId Int
  patient   Patient @relation(fields: [patientId], references: [id])
}

model CallSummary {
  id         Int      @id @default(autoincrement())
  patientId  Int
  dateTime   DateTime
  summary    String
  nurse      String
  nurseImage String
  patient    Patient  @relation(fields: [patientId], references: [id])
}

model ScheduledCall {
  id        Int      @id @default(autoincrement())
  patientId Int
  dateTime  DateTime 
  questions String
  patient   Patient  @relation(fields: [patientId], references: [id])
}