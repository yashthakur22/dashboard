generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Patient {
  id             Int             @id @default(autoincrement())
  name           String
  photo          String
  diagnosis      String
  history        String
  medications    Medication[]
  callSummaries  CallSummary[]
  scheduledCalls ScheduledCall[] // Add this line
}

model Medication {
  id        Int     @id @default(autoincrement())
  name      String
  dosage    String
  image     String
  patientId Int
  patient   Patient @relation(fields: [patientId], references: [id])
}

model CallSummary {
  id        Int      @id @default(autoincrement())
  patientId Int
  date      DateTime
  summary   String
  nurse     String
  patient   Patient  @relation(fields: [patientId], references: [id])
}

model ScheduledCall {
  id        Int      @id @default(autoincrement())
  patientId Int
  date      DateTime
  questions String
  patient   Patient  @relation(fields: [patientId], references: [id])
}